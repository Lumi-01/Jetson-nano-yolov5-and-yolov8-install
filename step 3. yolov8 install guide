#open terminal

# Create virtualenv - Specify Python 3.8 version and use system site packages
$ python3 -m virtualenv yolov8-py38 --python=python3.8 --system-site-packages

# Install Cython and numpy
$ pip3 install 'Cython<3.0'
$ pip3 install numpy==1.19.2

# Activate virtual environment
$ source yolov8-py38/bin/activate

# Check OpenCV operation
$ python3 
>> import cv2
>> cv2.__version__
# The installed version is displayed
>> exit()
