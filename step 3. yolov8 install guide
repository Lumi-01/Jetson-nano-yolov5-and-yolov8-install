#open terminal

# Create virtualenv - Specify Python 3.8 version and use system site packages
$ python3 -m virtualenv yolov8-py38 --python=python3.8 --system-site-packages

# Activate virtual environment
$ source yolov8-py38/bin/activate

# Upgrade pip and build tools to the latest version
$ pip3 install --upgrade pip setuptools wheel

# Install yolov8
pip install ultralytics==8.0.232
